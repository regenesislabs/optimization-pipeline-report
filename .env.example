# Server Configuration
HTTP_SERVER_PORT=3000
HTTP_SERVER_HOST=0.0.0.0

# PostgreSQL Configuration (Docker)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=pipeline
POSTGRES_PASSWORD=pipeline_secret
POSTGRES_DB=pipeline_report

# Authentication Secrets
# Secret for consumer-processor and entity-queue-producer to send monitoring data
MONITORING_SECRET=your_monitoring_secret_here

# Secret for report generator to update history
UPLOAD_SECRET=your_upload_secret_here

# Password for queue trigger UI (can be changed from default)
QUEUE_TRIGGER_PASSWORD=#Decentraland2025

# Entity Queue Producer Configuration (for queue-trigger and queue-bulk)
PRODUCER_URL=http://queue-producer:7888
PRODUCER_TMP_SECRET=your_producer_secret_here

# R2/S3 Configuration (for report storage and optimization checking)
S3_ACCESS_KEY_ID=your_access_key_here
S3_SECRET_ACCESS_KEY=your_secret_key_here
S3_ENDPOINT=https://your-endpoint.r2.cloudflarestorage.com
S3_BUCKET=optimized-assets
S3_REGION=auto

# UI Configuration (build-time - requires rebuild to change)
# Change v2 to v3 etc. when switching optimization API versions
VITE_OPTIMIZATION_API_URL=https://optimized-assets.dclexplorer.com/v3
VITE_WORLDS_API_URL=https://worlds-content-server.decentraland.org

# Report Scheduler Configuration
# Set to true to enable automatic report generation
REPORT_SCHEDULE_ENABLED=true
# Interval in hours between report generations (default: 3)
REPORT_SCHEDULE_INTERVAL_HOURS=3
# Set to true to run a report immediately on service startup
REPORT_RUN_ON_STARTUP=true